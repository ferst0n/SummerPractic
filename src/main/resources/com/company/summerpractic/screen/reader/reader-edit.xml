<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://readerEdit.caption"
        focusComponent="form">
    <data>
        <instance id="readerDc"
                  class="com.company.summerpractic.entity.Reader">
            <fetchPlan extends="_base">
                <property name="library" fetchPlan="_base"/>
                <property name="booksRegistrationCards" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="libraryDc" property="library"/>
            <collection id="booksRegistrationCardsDc" property="booksRegistrationCards"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="readerDc">
            <column width="350px">
                <textField id="fullNameField" property="fullName"/>
            </column>
        </form>
        <groupBox id="libraryBox" caption="msg://com.company.summerpractic.entity/Reader.library">
            <table id="libraryTable" dataContainer="libraryDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="name"/>
                </columns>
                <buttonsPanel>
                    <button action="libraryTable.add"/>
                    <button action="libraryTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <groupBox id="booksRegistrationCardsBox"
                  caption="msg://com.company.summerpractic.entity/Reader.booksRegistrationCards">
            <table id="booksRegistrationCardsTable" dataContainer="booksRegistrationCardsDc" width="100%"
                   height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="gettingDate"/>
                    <column id="returnedDate"/>
                </columns>
                <buttonsPanel>
                    <button action="booksRegistrationCardsTable.add"/>
                    <button action="booksRegistrationCardsTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
