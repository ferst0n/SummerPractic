<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://libraryBrowse.caption"
        focusComponent="librariesTable">
    <data readOnly="true">
        <collection id="librariesDc"
                    class="com.company.summerpractic.entity.Library">
            <fetchPlan extends="_base">
                <property name="books" fetchPlan="_base"/>
                <property name="readers" fetchPlan="_base"/>
                <property name="employee" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="librariesDl">
                <query>
                    <![CDATA[select e from Library e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="librariesTable" spacing="true">
        <filter id="filter"
                dataLoader="librariesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="librariesTable"
                    width="100%"
                    dataContainer="librariesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column caption="msg://Title" id="name"/>
                <column caption="msg://book" id="books"/>
                <column caption="msg://reader" id="readers"/>
                <column caption="msg://employee" id="employee.fullName"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="librariesTable.create"/>
                <button id="editBtn" action="librariesTable.edit"/>
                <button id="removeBtn" action="librariesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
