<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="SummerPractic">
        <createTable tableName="BOOK">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_BOOK"/>
            </column>
            <column name="AUTHOR" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="TITLE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="LIBRARY_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="AMOUNT_IN_LIBRARY" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
            <column name="REGISTRATION_CARD_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="SummerPractic">
        <createTable tableName="EMPLOYEE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_EMPLOYEE"/>
            </column>
            <column name="FULL_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
            <column name="LIBRARY_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="REGISTRATION_CARD_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="SummerPractic">
        <createTable tableName="LIBRARY">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_LIBRARY"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="SummerPractic">
        <createTable tableName="READER">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_READER"/>
            </column>
            <column name="FULL_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
            <column name="LIBRARY_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="5" author="SummerPractic">
        <createTable tableName="REGISTRATION_CARD">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_REGISTRATION_CARD"/>
            </column>
            <column name="PICKED_UP_DATE" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="READER_ID" type="UUID"/>
            <column name="RETURN_DATE" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="6" author="SummerPractic">
        <createIndex indexName="IDX_BOOK_LIBRARY_ID" tableName="BOOK">
            <column name="LIBRARY_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="LIBRARY_ID" baseTableName="BOOK" constraintName="FK_BOOK_ON_LIBRARY"
                                 referencedColumnNames="ID" referencedTableName="LIBRARY"/>
    </changeSet>
    <changeSet id="7" author="SummerPractic">
        <createIndex indexName="IDX_BOOK_REGISTRATION_CARD_ID" tableName="BOOK">
            <column name="REGISTRATION_CARD_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="REGISTRATION_CARD_ID" baseTableName="BOOK"
                                 constraintName="FK_BOOK_ON_REGISTRATION_CARD" referencedColumnNames="ID"
                                 referencedTableName="REGISTRATION_CARD"/>
    </changeSet>
    <changeSet id="8" author="SummerPractic">
        <createIndex indexName="IDX_EMPLOYEE" tableName="EMPLOYEE">
            <column name="REGISTRATION_CARD_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="REGISTRATION_CARD_ID" baseTableName="EMPLOYEE"
                                 constraintName="FK_EMPLOYEE_ON_REGISTRATIONCAR" referencedColumnNames="ID"
                                 referencedTableName="REGISTRATION_CARD"/>
    </changeSet>
    <changeSet id="9" author="SummerPractic">
        <createIndex indexName="IDX_EMPLOYEE_LIBRARY_ID" tableName="EMPLOYEE">
            <column name="LIBRARY_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="LIBRARY_ID" baseTableName="EMPLOYEE"
                                 constraintName="FK_EMPLOYEE_ON_LIBRARY" referencedColumnNames="ID"
                                 referencedTableName="LIBRARY"/>
    </changeSet>
    <changeSet id="10" author="SummerPractic">
        <createIndex indexName="IDX_READER_LIBRARY_ID" tableName="READER">
            <column name="LIBRARY_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="LIBRARY_ID" baseTableName="READER"
                                 constraintName="FK_READER_ON_LIBRARY" referencedColumnNames="ID"
                                 referencedTableName="LIBRARY"/>
    </changeSet>
    <changeSet id="11" author="SummerPractic">
        <addForeignKeyConstraint baseColumnNames="READER_ID" baseTableName="REGISTRATION_CARD"
                                 constraintName="FK_REGISTRATION_CARD_ON_READER" referencedColumnNames="ID"
                                 referencedTableName="READER"/>
    </changeSet>
</databaseChangeLog>